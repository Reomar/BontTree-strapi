{
  "kind": "collectionType",
  "collectionName": "add_ons",
  "info": {
    "singularName": "add-on",
    "pluralName": "add-ons",
    "displayName": "Add On"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "name": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "string",
      "required": true
    },
    "priceAdjustment": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "type": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "enumeration",
      "enum": [
        "milk",
        "syrup",
        "extra_shot",
        "topping",
        "other"
      ]
    },
    "description": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "string"
    },
    "isActive": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "boolean",
      "default": true,
      "required": true
    },
    "menuItems": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::menu-item.menu-item",
      "mappedBy": "addOns"
    }
  }
}
